{
  "name": "cell-bitset",
  "version": "0.3.6",
  "description": "Fast JS BitSet implementation. Beyond 32bit restrictions.",
  "main": "BitSet.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/unnoon/cell-bitset.git"
  },
  "keywords": [
    "bitset",
    "bitvector",
    "bitarray",
    "bitstring",
    "fast",
    "typescript"
  ],
  "author": "Rogier Geertzema",
  "license": "MIT",
  "scripts": {
    "build:clean": "rimraf -rf bin/ && rimraf -rf tmp/",
    "build:docs": "rimraf -rf bin/docs && npm run docs && ncp doc/ bin/docs/",
    "build:es6": "tsc --outDir tmp/ -p tsconfig.json --declaration --sourceMap --module ES6 --noEmit false && ncp tmp/src/ bin/ && npm run preprocess:es6",
    "build:files": "ncp package.json bin/package.json && ncp README.md bin/README.md",
    "build:ts": "npm run preprocess:ts",
    "build": "npm run build:clean && npm run build:es6 && npm run build:ts && npm run build:docs && npm run build:files",
    "docs": "rimraf -rf doc/ && typedoc --options .typedoc.json --out doc/ src/",
    "release": "npm version",
    "prepush": "npm test",
    "preversion": "npm test",
    "version": "npm run build && git add -A bin/",
    "postversion": "git push && git push --tags && npm publish bin/",
    "preprocess:es6": "rimraf bin/BitSet.js && metascript tmp/src/BitSet.js > bin/BitSet.js     -VERSION=%npm_package_version%",
    "preprocess:ts": " mkdirp bin/.ts/      && metascript     src/BitSet.ts > bin/.ts/BitSet.ts -VERSION=%npm_package_version%",
    "test": "karma start --single-run",
    "update": "ncu -u -a && npm install"
  },
  "dependencies": {
    "@types/reflect-metadata": "^0.1.0",
    "bottom_line": "^0.11.0",
    "core-js": "^3.3.6",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/chai": "^4.2.4",
    "@types/mocha": "^5.2.7",
    "@types/sinon": "^7.5.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-polyfill": "^6.26.0",
    "chai": "^4.2.0",
    "coveralls": "^3.0.7",
    "husky": "^3.0.9",
    "karma": "^4.4.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-firefox-launcher": "^1.2.0",
    "karma-mocha": "^1.3.0",
    "karma-sinon": "^1.0.5",
    "karma-typescript": "^4.1.1",
    "karma-typescript-es6-transform": "^4.1.1",
    "metascript": "^1.0.0",
    "mocha": "^6.2.2",
    "rimraf": "^3.0.0",
    "sinon": "^7.5.0",
    "tslint": "^5.20.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.6.4",
    "webpack": "^4.41.2"
  }
}
