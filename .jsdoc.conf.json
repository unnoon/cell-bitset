{
    "tags": {
        "allowUnknownTags" : true
    },
    "plugins": ["plugins/markdown"],
    "source": {
        "include": [
            "./src"
        ],
        "includePattern": ".+\\.js(doc)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true,
        "default": {
            "outputSourceFiles" : true
        },
        "applicationName": "cell-bitset",
        "meta": {
            "title": "",
            "description": "",
            "keyword": ""
        },
        "linenums": false
    },
    "markdown": {
        "parser": "gfm",
        "hardwrap": true,
        "tags": ["examples"]
    },
    "opts": {
        "encoding": "utf8",
        "recurse": true,
        "private": false,
        "lenient": true,
        "destination": "./doc",
        "template": "./node_modules/jaguarjs-jsdoc",
        "readme": "README.md"
    }
}