{
	"compilerOptions": {
		"lib": ["ES2020"],
		"allowJs": true,
		"emitDecoratorMetadata":true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"module": "esnext",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"outDir": "./dist/",
		"resolveJsonModule": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "ES2020"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "src/BitSet.old.ts"]
}